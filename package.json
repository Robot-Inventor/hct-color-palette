{
  "name": "smart-chroma",
  "version": "1.0.0",
  "description": "HCT based color palette tool.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--experimental-transform-types NODE_ENV=production rspack build",
    "dev": "cross-env NODE_OPTIONS=--experimental-transform-types NODE_ENV=development rspack build --watch",
    "serve": "cross-env NODE_OPTIONS=--experimental-transform-types NODE_ENV=development rspack serve --config rspack.serve.config.ts",
    "lint": "eslint ./src/**/*.ts ./rspack.*.ts",
    "format": "prettier --write ./**/*.ts",
    "format:check": "prettier --check ./**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Robot-Inventor/hct-color-palette.git"
  },
  "author": "Robot-Inventor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Robot-Inventor/hct-color-palette/issues"
  },
  "homepage": "https://github.com/Robot-Inventor/hct-color-palette#readme",
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "@rspack/cli": "^1.3.15",
    "@rspack/core": "^1.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^7.0.0",
    "html-inline-script-webpack-plugin": "^3.1.0",
    "html-to-image": "^1.11.7",
    "prettier": "^3.2.5",
    "style-loader": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "^0.16.0",
    "@figma/plugin-typings": "^1.88.0",
    "@robot-inventor/eslint-config": "^10.0.0",
    "@robot-inventor/ts-utils": "^0.8.0",
    "@robot-inventor/tsconfig-base": "^6.0.0",
    "@types/chroma-js": "^3.0.0",
    "@types/node": "^22.10.2",
    "chokidar": "^4.0.1",
    "eslint": "^9.0.0",
    "fork-ts-checker-webpack-plugin": "^9.0.2",
    "html-webpack-plugin": "^5.6.3"
  }
}
